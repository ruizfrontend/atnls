	<div id="presentacion">

		<div class="head clearfix">
			<a class="rtve" href="http://www.rtve.es/" title="Proyecto en colaboración con rtve.es"></a>
			<a class="lab" href="http://www.rtve.es/lab/" title="Proyecto en colaboración con el lab de rtve.es"></a>
			<a class="hamb showMenu" href="#menu"></a>
			<a href="{{ path('home') }}" class="url-lib titleHome ft-cutie"><strong>Memoria de futuro:</strong></a>
			<span class="titleThis"><strong>Presentación de Luis</strong></span>
		</div>

	    <div class="vid" data-autoplay="true" data-loop="false" data-controls="true" data-video="tTq63Or1pMA"><img src="./img/bg-luis.jpg" class="poster" alt=""></div>
	</div>

	<div id="miniplayer">
		<div class="bl-miniplayer">
			<div class="player-nav"><a href="{{ path('poemas') }}" class="url-lib ft-cutie">Poemario</a></div>
			<div class="bl-player">
				<a href="#" class="plyr-prev" title="poema anterior"></a>
				<a href="#" class="plyr-play" title="inicia la reproducción"></a>
				<a href="#" class="plyr-next" title="Siguiente poema"></a>
				<a href="{{ path('poemas') }}" class="plyr-list url-lib" title="abrir poemario"></a>
			</div>
		</div>
		<div class="bl-player-current"><div class="wk-valign"><div class="wk-valign-cont bl-player-current-inn"></div></div></div>
		<div class="bl-nav"><a href="{{ path('redes') }}" class="url-lib ft-cutie">Radar social</a></div>
	</div>


</div>